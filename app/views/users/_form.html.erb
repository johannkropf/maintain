<%= form_for(@user, :html => { :class => 'form-horizontal', :role => "form" }) do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :name, :class => 'control-label col-sm-2' %>
    <div class="col-sm-5">
      <%= f.text_field :name, :class => "form-control"  %>
    </div>
  </div>

  <div class="field form-group"> 
    <%= f.label :email, :class => 'control-label col-sm-2' %>
    <div class="col-sm-5">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :password, :class => 'control-label col-sm-2' %>
    <div class="col-sm-5">
      <%= f.password_field :password, :class => 'form-control' %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation, "Confirmation", :class => 'control-label col-sm-2' %>
    <div class="col-sm-5">
      <%= f.password_field :password_confirmation , :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Create my account", :class => "btn btn-primary btn-default" %>
    </div>
  </div>
<% end %>

