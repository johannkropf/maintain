<%= form_for(:session, url: sessions_path, :html => { :class => 'form-horizontal', :role => "form" }) do |f| %>

  <div class="field form-group">
    <%= f.label :email, :class =>  'control-label col-sm-2' %>
    <div class="col-sm-5">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :password, :class => 'control-label col-sm-2' %>
    <div class="col-sm-5">
      <%= f.password_field :password, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Log in", :class => "btn btn-primary btn-default" %>
    </div>
  </div>
<% end %>

<div class="row">
    <div class="col-sm-offset-2 col-sm-10">
      <ul class="list-inline" >
        <li>New user? <%= link_to "Sign up now!", signup_path %></li>
      </ul>
    </div>
</div>

