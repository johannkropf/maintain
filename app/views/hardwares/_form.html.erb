<%= form_for(@hardware, :html => { :class => 'form-horizontal' }) do |f| %>
  <% if @hardware.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@hardware.errors.count, "error") %> prohibited this hardware from being saved:</h2>

      <ul>
      <% @hardware.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label "Type", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :typehw, :class => 'input-xlarge' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :model, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :model, :class => 'input-xlarge' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :serialnr, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :serialnr, :class => 'input-xlarge' %>
    </div>  
  </div>

  <div class="control-group">
    <%= f.label :desc, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :desc, :class => 'input-xxlarge' %>
    </div>  
  </div>

  <div class="control-group">
    <%= f.label :location, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :location, :class => 'input-xxlarge' %>
    </div>  
  </div>

  <div class="form-actions">
    <%= f.submit "Save", :class => 'btn btn-primary' %>
    <%=link_to 'Cancel', hardwares_path, :class => 'btn' %>
  </div>

<% end %>
